<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaCertificado"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lblTituloTelaCertificado"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/titulo_bg"
        android:text="LISTA DE CERTIFICADOS" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <EditText
            android:id="@+id/txtBuscaTelaCertificado"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listaCertificado"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            tools:listitem="@layout/item_lista_certificado" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAdicionarTelaCertificado"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:text="+" />

</LinearLayout>