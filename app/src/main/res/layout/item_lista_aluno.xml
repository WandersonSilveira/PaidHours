<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lista_bg">

    <ImageView
    android:id="@+id/ivImagemTelaItemListaAluno"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/lista_bg"/>

    <TextView
        android:id="@+id/lblNomeTelaItemListaAluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/lblMatriculaItemListaAluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matricula"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnGerenciarCertificadosItemListaAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerenciar certificados"
        android:layout_marginLeft="200dp"
        app:backgroundTint="#2196F3" />

</LinearLayout>