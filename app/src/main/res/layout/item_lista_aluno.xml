<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lista_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivImagemTelaItemListaAluno"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/lista_bg"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblNomeTelaItemListaAluno"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Nome"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lblMatriculaItemListaAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matricula"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/lblHorasValidadasItemListaAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matricula"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_marginLeft="10dp"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnGerenciarCertificadosItemListaAluno"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Certificados"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    app:backgroundTint="#2196F3" />

                <ImageView
                    android:id="@+id/ivStatusTelaItemListaAluno"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>