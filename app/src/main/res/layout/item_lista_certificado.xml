<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lista_bg">

    <ImageView
        android:id="@+id/ivImagemTelaItemListaCertificado"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/lista_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/lblNomeTelaItemListaCertificado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lblDescricaoItemListaCertificado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição"
            style="@style/TextAppearance.AppCompat.Large"
            android:textSize="10sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/lblCargaHorariaItemListaCertificado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carga horária"
            android:textSize="10sp"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

</LinearLayout>